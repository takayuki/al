# ==============================================================================
# Variables
# ==============================================================================

CC      := @CC@
CFLAGS  := @DEFS@ -I. @CFLAGS@
#CFLAGS  += -DTL2_OPTIM_HASHLOG
#CFLAGS  += -DTL2_RESIZE_HASHLOG

LIBTL2 := libtl2.a

SRCS := \
	tl2.c \
	tmalloc.c \
#
OBJS := ${SRCS:.c=.o}

AR      := ar
RANLIB  := ranlib

RM := rm -f


# ==============================================================================
# Rules
# ==============================================================================

.PHONY: default
default: $(LIBTL2)

.PHONY: clean
clean:
	$(RM) $(LIBTL2) $(OBJS) *~ core *.core

.PHONY: distclean
distclean: clean
	$(RM) Makefile config.h
	$(RM) config.cache config.log config.status

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(LIBTL2): $(OBJS)
	$(AR) cru $@ $^
	$(RANLIB) $@


# ==============================================================================
# Dependencies
# ==============================================================================

%.o: %.h


# ==============================================================================
#
# End of Makefile.real
#
# ==============================================================================
